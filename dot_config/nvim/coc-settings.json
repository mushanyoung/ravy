{
  "diagnostic.level": "warning",
  "coc.preferences.formatOnSave": false,

  // Tailwind
  "tailwindCSS.emmetCompletions": true,

  // Pyright
  "pyright.inlayHints.functionReturnTypes": true,
  "pyright.inlayHints.parameterTypes": false,
  "pyright.inlayHints.variableTypes": true,

  // Disable Pyright/Black's default formatting
  "python.formatting.provider": "none",

  // Register Ruff as a language server
  "languageserver": {
    "ruff": {
      "command": "ruff",
      "args": ["server"],
      "filetypes": ["python"],
      "settings": {
        "logLevel": "debug"
      }
    },
    "biome": {
      "command": "biome",
      "args": ["lsp-proxy"],
      "filetypes": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "json",
        "jsonc",
        "css"
      ],
      "rootPatterns": ["biome.json"],
      "requireRootPattern": true
    }
  },

  "typescript.format.enable": false,
  "javascript.format.enable": false,

  // Auto-format on save for specific filetypes
  "[python]": {
    "coc.preferences.formatOnSave": true
  },
  "[javascript]": {
    "coc.preferences.formatOnSave": true
  },
  "[javascriptreact]": {
    "coc.preferences.formatOnSave": true
  },
  "[typescript]": {
    "coc.preferences.formatOnSave": true
  },
  "[typescriptreact]": {
    "coc.preferences.formatOnSave": true
  },
  "[json]": {
    "coc.preferences.formatOnSave": true,
  },
  "[jsonc]": {
    "coc.preferences.formatOnSave": true
  },
  "[css]": {
    "coc.preferences.formatOnSave": true
  }
}
