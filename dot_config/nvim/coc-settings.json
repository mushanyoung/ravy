{
  "diagnostic.level": "warning",
  "coc.preferences.formatOnSave": false,

  // Prettier
  "prettier.bracketSameLine": false,
  "prettier.enable": true,
  "prettier.endOfLine": "lf",
  "prettier.htmlWhitespaceSensitivity": "ignore",
  "prettier.printWidth": 100,
  "prettier.requireConfig": false,
  "prettier.singleQuote": true,
  "prettier.tabWidth": 2,
  "prettier.trailingComma": "es5",
  "tailwindCSS.emmetCompletions": true,

  // Pyright
  "pyright.inlayHints.functionReturnTypes": true,
  "pyright.inlayHints.parameterTypes": false,
  "pyright.inlayHints.variableTypes": true,

  // Disable Pyright/Black's default formatting
  "python.formatting.provider": "none",

  // Register Ruff as a language server
  "languageserver": {
    "ruff": {
      "command": "ruff",
      "args": ["server"],
      "filetypes": ["python"],
      "settings": {
        "logLevel": "debug"
      }
    }
  },

  // Auto-format on save for Python
  "[python]": {
    "coc.preferences.formatOnSave": true
  }
}
