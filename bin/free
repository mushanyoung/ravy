#!/usr/bin/env sh
#
# free: show memory stats (portable-ish)
#
set -eu

os="$(uname 2>/dev/null || true)"
if [ "$os" = "Darwin" ]; then
  exec top -l 1 -s 0 | grep PhysMem
else
  if [[ -x /usr/bin/free ]]; then
    exec /usr/bin/free "$@"
  fi
  if [[ -x /bin/free ]]; then
    exec /bin/free "$@"
  fi
fi
